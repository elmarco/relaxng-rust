            */
    pub fn build(&self) -> Result<Doc> {
        let style = Clone::clone(
            self.style.as_ref().ok_or(Error::BuilderMissingField("doc", "style"))?,
        );
        let name = Clone::clone(
            self.name.as_ref().ok_or(Error::BuilderMissingField("doc", "name"))?,
        );
        Ok(Doc { style, name })
    }
